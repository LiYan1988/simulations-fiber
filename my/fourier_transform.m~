clc;
clear;
close all;

df = 2*pi*0.01; % Hz
fmax = pi*100; % Hz
f = -fmax:df:fmax-df;
fn = length(f);
dt = pi/fmax; % s
tmax = pi/df; % s
t = -tmax:dt:tmax-dt;
xt = cos(2*pi*10*t);
xf = fftshift(fft(fftshift(xt)))/fn/sqrt(df/(2*pi));
xt2 = fftshift(ifft(fftshift(xf)))*fn*sqrt(df/(2*pi));
xf2 = fftshift(ifft(fftshift(xt2)))/fn/sqrt(df/(2*pi));
figure;
subplot(2, 1, 1)
plot(t, xt)
hold on;
plot(t, xt2, '--')
subplot(2, 1, 2)
plot(f/(2*pi), abs(xf))
hold on;
plot(f/(2*pi), abs(xf2))

P_t = norm(xt)^2/fn;
P_f = norm(xf)^2*df/(2*pi);
disp(P_f/P_t)
